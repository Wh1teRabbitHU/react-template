root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.js]
indent_style = tab
tab_width = 4

[*.jsx]
indent_style = tab
tab_width = 4

[*.ts]
indent_style = tab
tab_width = 4

[*.tsx]
indent_style = tab
tab_width = 4

[*.json]
indent_style = space
indent_size = 2
